<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilemgrActivity" >

    <com.android.app.adapter.MyactionBar 
        android:id="@+id/my_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></com.android.app.adapter.MyactionBar>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        >

        <TextView
            android:id="@+id/tv_tvnumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件数量:"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_tvnumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="#E29638"
            android:text="17个" />

        <TextView
            android:id="@+id/tv_space1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:text="占用空间" />

        <TextView
            android:id="@+id/tv_space2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="#E29638"
            android:text="200.00K" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_fileshow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
    </ListView>

    <Button
        android:id="@+id/btn_del"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:background="@drawable/btn_select"
        android:text="删除所选文件"
        android:textSize="20sp" />
    
</LinearLayout>
