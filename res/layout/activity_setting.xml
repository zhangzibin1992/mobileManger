<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity" >
    
    <com.android.app.adapter.MyactionBar 
        android:id="@+id/my_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></com.android.app.adapter.MyactionBar>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:background="#fff"
		    android:orientation="vertical">
		    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/select_jump"
            
             >
			
		        
            <TextView
                android:id="@+id/tV_kaijiqidong"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="开机启动" 
                android:textSize="15sp"/>

            <ToggleButton
                android:id="@+id/tgbtn_kaijiqidong"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@drawable/check"
                android:textOn=""
                android:textOff=""
                 />
        </RelativeLayout>
        
		    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/select_jump"
             >
            
		        

            <TextView
                android:id="@+id/tV_tongzhitubiao"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="通知图标" 
                android:textSize="15sp"/>

            <ToggleButton
                android:id="@+id/tgbtn_tongzhitubiao"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@drawable/check"
                android:textOn=""
                android:textOff=""
                 />
        </RelativeLayout>
		    <RelativeLayout
            android:layout_width="fill_parent"
            android:background="@drawable/select_jump"
            android:layout_height="60dp"
             >
            
		      
		
            <TextView
                android:id="@+id/tV_xiaoxituisong"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="消息推送" 
                android:textSize="15sp"/>

            <ToggleButton
                android:id="@+id/tgbtn_xiaoxituisong"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@drawable/check"
                android:textOn=""
                android:textOff=""
                 />
        </RelativeLayout>
        
		    
		
		<TextView android:id="@+id/tv_help"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:text="帮助说明"
		    android:paddingLeft="10dp"
		    android:gravity="center_vertical"
		    android:textSize="15sp"
		    android:background="@drawable/select_jump"
		    android:layout_marginRight="5dp"
		    android:drawableRight="@drawable/ic_arrows_right"/>
		
		
		<TextView android:id="@+id/tv_advice"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:text="意见反馈"
		    android:paddingLeft="10dp"
		    android:gravity="center_vertical"
		    android:textSize="15sp"
		    android:background="@drawable/select_jump"
		    android:layout_marginRight="5dp"
		    android:drawableRight="@drawable/ic_arrows_right"/>
		
		
		
		<TextView android:id="@+id/tv_share"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:text="好友分享"
		    android:paddingLeft="10dp"
		    android:gravity="center_vertical"
		    android:textSize="15sp"
		    android:background="@drawable/select_jump"
		    android:layout_marginRight="5dp"
		    android:drawableRight="@drawable/ic_arrows_right"/>
		
		
		
		<TextView android:id="@+id/tv_update"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:text="版本更新"
		    android:background="@drawable/select_jump"
		    android:paddingLeft="10dp"
		    android:gravity="center_vertical"
		    android:textSize="15sp"
		    android:layout_marginRight="5dp"
		    android:drawableRight="@drawable/ic_arrows_right"/>
		
		
		<TextView android:id="@+id/tv_aboutus"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:text="关于我们"
		    android:background="@drawable/select_jump"
		    android:paddingLeft="10dp"
		    android:gravity="center_vertical"
		    android:textSize="15sp"
		    android:layout_marginRight="5dp"
		    android:drawableRight="@drawable/ic_arrows_right"/>
		
		
		
		
		 
		</LinearLayout>
        
        
        
    </ScrollView>

</LinearLayout>
