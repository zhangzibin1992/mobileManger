<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   	android:orientation="vertical"
    tools:context=".ThirdActivity" >
    
    <com.android.app.adapter.MyactionBar 
        android:id="@+id/my_action"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        
        ></com.android.app.adapter.MyactionBar>
        

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

        <com.android.app.tools.SpeedActivityView
            android:id="@+id/view_jiasu"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/imv_jiasu"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/select_yuanxing" />
        
        
        
        <Button
            android:id="@+id/btn_neicun2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_neicun2"
            android:layout_centerHorizontal="true"
            android:text="一键加速" 
            android:background="@drawable/select_addspeed"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/tv_neicun2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/btn_neicun2"
            android:layout_alignTop="@+id/imv_jiasu"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="60%"
            android:textSize="30sp" />
        
    </RelativeLayout>
    
   

    <include
        
        layout="@layout/include_layout" 
         android:layout_weight="0"/>

</LinearLayout>
