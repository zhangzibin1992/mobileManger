<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:addStatesFromChildren="true"
    android:descendantFocusability="blocksDescendants"
     >

   

    <CheckBox
        android:layout_marginLeft="5dp"
        android:id="@+id/cb_fileshow"
        android:button="@drawable/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         />
    
     <ImageView
        android:id="@+id/iv_fileshow"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/cb_fileshow"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:src="@drawable/azy" />

     <TextView
         android:id="@+id/tv_fileshow_title"
         android:layout_toRightOf="@+id/iv_fileshow"
         android:layout_marginLeft="5dp"
         android:layout_alignTop="@+id/iv_fileshow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="文件名称"
         android:textSize="15dp" />
     
     <TextView
         android:id="@+id/tv_fileshow_time"
         android:layout_toRightOf="@+id/iv_fileshow"
         android:layout_marginLeft="5dp"
         android:layout_alignBottom="@+id/iv_fileshow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="最后浏览时间"
         android:textSize="15dp" />
     
     <TextView
         android:id="@+id/tv_fileshow_size"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:layout_centerVertical="true"
         android:text="文件大小"
         android:textSize="15dp" />

</RelativeLayout>
